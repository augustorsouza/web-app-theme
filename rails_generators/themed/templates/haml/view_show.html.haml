.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        = link_to :view_all.t, <%= controller_routing_path %>_path
      %li
        = link_to :new.t, new_<%= singular_controller_routing_path %>_path
      %li.active
        = link_to :show.t, <%= singular_controller_routing_path %>_path
  .content
    .inner
    <%- columns.each do |column| -%>
      %p
        %strong #{:<%= column.name %>.t(:<%= resource_name %>)}:
        =h @<%= resource_name %>.<%= column.name %>
    <%- end -%>
      .wat-cf
        = link_to "#{image_tag('web-app-theme/application_edit.png', :alt => :edit.t(:resource => :<%= resource_name %>.t[:one]))} #{:edit.t}",  edit_<%= singular_controller_routing_path %>_path(@<%= resource_name %>), :class => 'button'
        = link_to "#{image_tag('web-app-theme/cross.png', :alt => :destroy.t(:resource => :<%= resource_name %>.t[:one]))} #{:destroy.t}", <%= singular_controller_routing_path %>_path(@<%= resource_name %>), :method => 'delete', :class => 'button', :confirm => :are_you_sure?.t

