%h1
  = options[:app_name]
#block-signup.block
  %h2
    Sign up
  .content
    .flash
      - flash.each do |type, message|
        .message{ :class => "message #{type}"}
          %p= message
    = form_for <%= resource_name %>, :url => <%= controller_routing_path %>_path, :html => { :class => 'form' } do |f|
    .group.wat-cf
      .left
        %label.label
          Login
      .right
        = f.text_field :login, :class => 'text_field'
    .group.wat-cf
      .left
        %label.label
          Email
      .right
        = f.text_field :email, :class => 'text_field'
    .group.wat-cf
      .left
        %label.label
          Password
      .right
        = f.password_field :password, :class => 'text_field'
    .group
      .left.wat-cf
        %label.label
          Password
      .right
        = f.password_field :password_confirmation, :class => 'text_field'
    .group.navform
      %input.button{ :type => "submit", :value => "Sign up" }
